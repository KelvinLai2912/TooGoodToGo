@{
    ViewData["Title"] = "Home";
}

<!-- Hero -->
<section class="hero tg-hero text-white">
    <div class="container py-5">
        <div class="row align-items-center g-4">
            <div class="col-lg-6">

                <h1 class="display-5 fw-bold mb-3">TooGoodToGo &#64; Avans</h1>
                <p class="lead mb-4">
                    Reserveer voordelige maaltijdpakketten en help voedselverspilling verminderen.
                </p>

                <div class="row g-2">
                    <div class="col-12 col-sm-6">
                        <a asp-controller="Package" asp-action="AvailablePackages" class="btn btn-tg-outline w-100 py-3">
                            <i class="bi bi-bag-heart me-2"></i>Bekijk pakketten
                        </a>
                    </div>
                    <div class="col-12 col-sm-6">
                        <a asp-controller="Package" asp-action="MyReservations" class="btn btn-tg-outline w-100 py-3">
                            <i class="bi bi-bookmark-check me-2"></i>Mijn reserveringen
                        </a>
                    </div>
                    @if (User.IsInRole("KantineMedewerker"))
                    {
                        <div class="col-12 col-sm-6">
                            <a asp-controller="Packages" asp-action="Create" class="btn btn-tg-outline w-100 py-3">
                                <i class="bi bi-plus-circle me-2"></i>Pakket aanbieden
                            </a>
                        </div>
                    }
                </div>

                <div class="d-flex align-items-center flex-wrap gap-4 mt-4 small opacity-75">
                    <div><i class="bi bi-geo-alt me-1"></i> Breda · Den Bosch · Tilburg</div>
                    <div><i class="bi bi-people me-1"></i> Studenten & medewerkers</div>
                    <div><i class="bi bi-cloud-upload me-1"></i> CI/CD naar Azure</div>
                </div>
            </div>

            <div class="col-lg-6 text-center">
                <div class="position-relative">
                    <img src="~/img/Image1.png" class="img-fluid rounded shadow-lg tg-hero-img" alt="Maaltijdpakketten" />
                    <img src="~/img/logo.png" class="tg-hero-mark" alt="" aria-hidden="true" />
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features -->
<section class="container my-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card tg-card h-100 shadow-sm">
                <div class="card-header d-flex align-items-center gap-2">
                    <i class="bi bi-geo-alt"></i><span>Filter op locatie</span>
                </div>
                <div class="card-body">
                    <p>Vind snel pakketten in jouw stad en favoriete kantine.</p>
                    <a asp-controller="Packages" asp-action="Index" class="stretched-link">Naar pakketten →</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card tg-card h-100 shadow-sm">
                <div class="card-header d-flex align-items-center gap-2">
                    <i class="bi bi-list-check"></i><span>Voorbeeldinhoud</span>
                </div>
                <div class="card-body">
                    <p>Zie indicatieve producten per pakket—handig om te kiezen.</p>
                    <a asp-controller="Packages" asp-action="Index" class="stretched-link">Bekijk →</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card tg-card h-100 shadow-sm">
                <div class="card-header d-flex align-items-center gap-2">
                    <i class="bi bi-shield-check"></i><span>18+ controle</span>
                </div>
                <div class="card-body">
                    <p>Alcoholhoudende pakketten alleen zichtbaar voor 18+ studenten.</p>
                    <span class="badge tg-badge-soft">Regel actief</span>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA -->
<section class="container my-5">
    <div class="tg-cta p-4 p-md-5 d-md-flex align-items-center justify-content-between rounded-4">
        <div class="mb-3 mb-md-0">
            <h4 class="mb-2">Klaar om te starten?</h4>
            <p class="mb-0">Log in en maak vandaag nog impact tegen voedselverspilling.</p>
        </div>
        <a asp-controller="Account" asp-action="Login" class="btn btn-dark btn-lg mt-3 mt-md-0">
            <i class="bi bi-person-check me-2"></i>Inloggen
        </a>
    </div>
</section>
